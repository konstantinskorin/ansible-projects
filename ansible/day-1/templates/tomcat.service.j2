[Unit]
Description=Tomcat
After=syslog.target network.target

[Service]
Type=forking

User={{ user_name }}
Group={{ user_name }}

Environment=JAVA_HOME=/usr/lib/jvm/jre
Environment='JAVA_OPTS=-Djava.awt.headless=true'

Environment=CATALINA_HOME=/opt/{{ user_name }}/apache-tomcat-{{ tomcat_version }}
Environment=CATALINA_BASE=/opt/{{ user_name }}/apache-tomcat-{{ tomcat_version }}
Environment=CATALINA_PID=/opt/{{ user_name }}/apache-tomcat-{{ tomcat_version }}/temp/tomcat.pid

ExecStart=/opt/{{ user_name }}/apache-tomcat-{{ tomcat_version }}/bin/catalina.sh start
ExecStop=/opt/{{ user_name }}/apache-tomcat-{{ tomcat_version }}/bin/catalina.sh stop

[Install]
WantedBy=multi-user.target
